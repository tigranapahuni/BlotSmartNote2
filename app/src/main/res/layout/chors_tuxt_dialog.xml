<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/coloryellownew">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginStart="@dimen/chors_tuxt_margin_View"
                android:text="4 x T"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/chckBx_tuz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="55dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_below="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorBlack" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout2"
            android:layout_below="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/chors_tuxt_margin_View"
                android:padding="5dp"
                android:text="4 x V"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/chckBx_valet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="55dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_below="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorBlack" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout3"
            android:layout_below="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/chors_tuxt_margin_View"
                android:padding="5dp"
                android:text="4 x 9"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <CheckBox
                android:id="@+id/chckBx_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="55dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_below="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorBlack" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout4"
            android:layout_below="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/view3">

            <TextView
                android:id="@+id/txtView_4tuxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/chors_tuxt_margin_View"
                android:text="4 x (10,D,K)"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/btn_4paper_minus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_score"
                android:src="@drawable/ic_remove_yelow_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtView_chorstuxt_Qanak"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_chorstuxt_Qanak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="0"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_chorstuxt_plus"
                tools:ignore="MissingConstraints" />

            <ImageButton

                android:id="@+id/btn_chorstuxt_plus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_score"

                android:src="@drawable/ic_add_yelow_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_below="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorBlack" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout5"
            android:layout_below="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/view3">

            <TextView
                android:id="@+id/txtView_sto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/chors_tuxt_margin_View"
                android:text="@string/sto"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/btn_sto_minus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_score"
                android:src="@drawable/ic_remove_yelow_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtView_100_Qanak"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_100_Qanak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="0"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_100_plus"
                tools:ignore="MissingConstraints" />

            <ImageButton

                android:id="@+id/btn_100_plus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_score"

                android:src="@drawable/ic_add_yelow_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_below="@+id/layout5"
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorBlack" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout6"
            android:layout_below="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hitsun"
                android:layout_marginStart="@dimen/chors_tuxt_margin_View"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/btn_50_minus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_score"
                android:src="@drawable/ic_remove_yelow_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtView_50_Qanak"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_50_Qanak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="0"
                android:textSize="25sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_50_plus"
                tools:ignore="MissingConstraints" />

            <ImageButton

                android:id="@+id/btn_50_plus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_score"
                android:src="@drawable/ic_add_yelow_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_below="@+id/layout6"
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorBlack" />

        <ImageButton
            android:id="@+id/ImgBtn_Ok"
            android:layout_below="@+id/layout6"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:background="@drawable/btn_score"
            android:gravity="center"
            android:padding="15dp"
            android:src="@drawable/ic_check_yellow_24dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ImgeViw_closeX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@drawable/klor"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>
</RelativeLayout>