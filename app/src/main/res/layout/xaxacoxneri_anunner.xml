<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/coloryellownew">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_below="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtTxt_igrok1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/chors_tuxt_margin_View"
                android:background="@drawable/shape_textedit"
                android:ems="6"
                android:hint="Team A-1"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/edtTxt_igrok3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/chors_tuxt_margin_View"
                android:background="@drawable/shape_textedit"
                android:ems="6"
                android:hint="Team B-1"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_below="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/edtTxt_igrok2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/chors_tuxt_margin_View"
                android:background="@drawable/shape_textedit"
                android:ems="6"
                android:hint="Team A-2"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtTxt_igrok4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/chors_tuxt_margin_View"
                android:background="@drawable/shape_textedit"
                android:ems="6"
                android:hint="Team B-2"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_below="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgBtn_Ok"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_score"
                android:layout_margin="@dimen/chors_tuxt_margin_View_Ok_button"
                android:onClick="diler_ok"
                android:src="@drawable/ic_check_yellow_24dp" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@drawable/klor"
            android:onClick="diler_close"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

</RelativeLayout>